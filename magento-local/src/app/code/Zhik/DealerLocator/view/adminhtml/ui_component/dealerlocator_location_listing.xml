<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">dealerlocator_location_listing.dealerlocator_location_listing_data_source</item>
            <item name="deps" xsi:type="string">dealerlocator_location_listing.dealerlocator_location_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/new"/>
                <class>primary</class>
                <label translate="true">Add New Location</label>
            </button>
        </buttons>
        <spinner>dealerlocator_location_columns</spinner>
        <deps>
            <dep>dealerlocator_location_listing.dealerlocator_location_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dealerlocator_location_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">location_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Zhik_DealerLocator::locations_view</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="dealerlocator_location_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>location_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected locations?</message>
                        <title translate="true">Delete items</title>
                    </confirm>
                    <url path="*/*/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
            <action name="approve">
                <settings>
                    <url path="*/*/massApprove"/>
                    <type>approve</type>
                    <label translate="true">Approve</label>
                </settings>
            </action>
            <action name="reject">
                <settings>
                    <url path="*/*/massReject"/>
                    <type>reject</type>
                    <label translate="true">Reject</label>
                </settings>
            </action>
            <action name="approve_deletion">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to permanently delete the selected locations marked for deletion?</message>
                        <title translate="true">Approve Deletion</title>
                    </confirm>
                    <url path="*/*/massApproveDeletion"/>
                    <type>delete</type>
                    <label translate="true">Approve Deletion</label>
                </settings>
            </action>
            <action name="reject_deletion">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to reject the deletion request for the selected locations?</message>
                        <title translate="true">Reject Deletion</title>
                    </confirm>
                    <url path="*/*/massRejectDeletion"/>
                    <type>reject</type>
                    <label translate="true">Reject Deletion</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="dealerlocator_location_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="*/*/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">location_id</param>
                <param name="enabled" xsi:type="boolean">false</param>
                <param name="selectProvider" xsi:type="string">dealerlocator_location_listing.dealerlocator_location_listing.dealerlocator_location_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">dealerlocator_location_listing.dealerlocator_location_listing.dealerlocator_location_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>location_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="location_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="name">
            <settings>
                <filter>text</filter>
                <label translate="true">Location Name</label>
            </settings>
        </column>
        <column name="customer_id" class="Zhik\DealerLocator\Ui\Component\Listing\Column\Customer">
            <settings>
                <filter>text</filter>
                <label translate="true">Customer</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        <column name="address">
            <settings>
                <filter>text</filter>
                <label translate="true">Address</label>
            </settings>
        </column>
        <column name="city">
            <settings>
                <filter>text</filter>
                <label translate="true">City</label>
            </settings>
        </column>
        <column name="state">
            <settings>
                <filter>text</filter>
                <label translate="true">State</label>
            </settings>
        </column>
        <column name="status" component="Magento_Ui/js/grid/columns/select">
            <settings>
                <options class="Zhik\DealerLocator\Model\Source\Status"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Status</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
        <column name="updated_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Modified</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Zhik\DealerLocator\Ui\Component\Listing\Column\LocationActions">
            <settings>
                <indexField>location_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
</listing>